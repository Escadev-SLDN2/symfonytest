{% extends "base.html.twig" %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <section>
        <div class="image">
            <img src="{{ asset('assets/img/') ~ article.image }}" alt="{{ article.titre }}" />
        </div>

        <div class="meta">
            <small>
                Créé le {{ article.dateCreation | date('d/m/Y') }}
                dans la catégorie {{ article.categorie.nom }}
            </small>
        </div>

        <div class="content">
            {{ article.contenu | raw }}
        </div>
    </section>
{% endblock %}
