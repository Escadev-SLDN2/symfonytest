{% extends 'base.html.twig' %}

{% block title %}
	{{ categorie.nom }}
{% endblock %}

{% block body %}
	{% for article in categorie.articles %}
		<section>
			<h2>
				<a href="{{ path('blog.article',{'id':article.id}) }}">{{ article.titre }}</a>
			</h2>
			<div>
				{{ article.contenu | raw }}
			</div>
		</section>
		<hr/>
	{% endfor %}
{% endblock %}
