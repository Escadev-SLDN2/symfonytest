{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <section>
        <h2>{{ article.titre }}</h2>
        <p>
            Créé le {{ article.dateCreation | date('d/m/Y') }} / Catégorie : {{ article.categorie.nom }}
        </p>

        <p>
            <img src="{{ asset('assets/img/' ~ article.image) }}" alt="{{ article.titre }}" />
        </p>

        <div>
            {{ article.contenu | raw }}
        </div>
    </section>
    <hr/>
{% endblock %}