{% extends 'base.html.twig' %}

{% block title %}{{ pagetitle }}{% endblock %}

{% block body %}
    <section>
        <p>
            <img src="{{ asset('assets/img/' ~ article.image) }}" alt="{{ article.titre }}" />
        </p>

        <p>
            <small>
                Créé le {{ article.dateCreation | date('d/m/Y') }} dans la catégorie <a href="{{ path('blog',{'id':article.categorie.id}) }}">{{ article.categorie.nom }}</a>
            </small>
        </p>

        <div class="content-article">
            {{ article.contenu | raw }}
        </div>
    </section>
    <hr/>
{% endblock %}