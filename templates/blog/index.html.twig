{% extends 'base.html.twig' %}

{% block title %}{{ categorie.nom }}{% endblock %}

{% block body %}
    {% for article in categorie.articles %}
    <section>
        <a href="{{ path('article', {'id': article.id} ) }}"><h2>{{ article.titre }}</h2></a>

        <div>
            {{ article.contenu | raw }}
        </div>
    </section>
    <hr/>
    {% endfor %}
{% endblock %}
